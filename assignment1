
//Create a java program to search through the home directory and look for files that match a regular expression. The program should be able to take inputs repeatedly and should print out the full absolute path of the matching files found.



package assignments;

import java.io.File;
import java.util.Scanner;

public class Assignment1 {
    public void findFile()
    {
        String path="/home/goutM/Desktop/git/git_katas";
        File file=new File(path);
        String s;
        int t=0,flag=0;
        Scanner sc=new Scanner(System.in);
        while(true)
        {
            System.out.println("Enter the file name you want to search");
            s=sc.nextLine();
            String[] files=file.list();
            for(String a:files)
            {
                if(a.equals(s))
                {
                    t=1;
                    flag=1;
                    System.out.println("found :" +file.getAbsolutePath());
                    break;
                }

            }
            if(t==0)
            {
                for(int i=0;i<files.length;i++) {
                    String s1 = String.join("/", path, files[i]);
                    File f=new File(s1);
                    if(f.isDirectory()) {
                        String[] files1 = f.list();
                        for (String a : files1) {
                            if (a.equals(s)) {
                                t = 1;
                                flag = 1;
                                System.out.println("found :" + f.getAbsolutePath());
                                break;
                            }

                        }
                        if (t == 1) {
                            break;
                        }
                    }

                }
            }
            t=0;
            if(flag==0)
            {
                System.out.println("File not found re-enter the file name");
            }
            flag=0;
        }
    }
    public static void main(String[] args)
    {
        Assignment1 b=new Assignment1();
        b.findFile();
    }
}
